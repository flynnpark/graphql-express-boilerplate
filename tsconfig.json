{
  "compilerOptions": {
    "lib": ["es5", "es6", "esnext.asynciterable"],
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "rootDir": "src/",
    "outDir": ".build"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
